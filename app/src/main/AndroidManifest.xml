        <service android:name=".androidbase.service_lifecycle.TestService" />

        <activity
            android:name=".androidbase.service_lifecycle.ServiceActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".androidbase.service_lifecycle.Service1Activity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".androidbase.service_lifecycle.Service2Activity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".androidbase.service_lifecycle.Service3Activity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

        <!-- MaterialDesign -->
        <activity
            android:name=".view.MaterialDesign.CoordinatorLayoutTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MaterialDesign.AppBarLayoutTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MaterialDesign.CollapsingToolbarLayoutTestActivity1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MaterialDesign.CollapsingToolbarLayoutTestActivity2"
            android:screenOrientation="portrait" />

        <!-- ImageLoader -->
        <activity
            android:name=".bitmap.ImageLoader.ImageLoaderActivity"
            android:screenOrientation="portrait" />

        <!-- View -->
        <activity
            android:name=".view.AutoFixedLayout.AutoFixedLayoutTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Banner.BannerTestActivity"
            android:screenOrientation="portrait" />
