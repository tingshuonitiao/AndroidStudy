        </activity>

        <!-- IntentService -->
        <service android:name=".androidbase.intentservice.MyIntentService" />

        <activity
            android:name=".androidbase.intentservice.TestIntentServiceActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

